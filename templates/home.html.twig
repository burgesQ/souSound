{% extends "base.html.twig" %}

{% block body %}

    {% set user = app.user %}

    <div id="dynamic_content">
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">

        function playSound(soundLoc) {

            console.log(soundLoc);

            soundLoc = '../' + soundLoc;

            console.log(soundLoc);

            var sound = new Howl({
                src: [ soundLoc ]
            });

            sound.play();
        }

        function pageLoader(route, arrayOptions) {

            $.ajax({
                url: route,
                method: "get",
                data: arrayOptions
            }).done(function (msg) {
                // console.log(msg);
                $('#dynamic_content').val('');
                $('#dynamic_content').html(msg);
            });
        }

        $(document).ready(function() {
            pageLoader('{{ path('app_view_byclass', { 'class' : 'track'}) }}', {});
        })

    </script>

{% endblock %}